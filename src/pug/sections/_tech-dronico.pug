			div(class='tech-dronico__btn active-btn' data-text='1')
				.tech-dronico__circle
					.tech-dronico__text-container
						span.plus +
						span.active-text Автоматизация
		div(class="tech-dronico__img medium")
			div(class="rellax" data-invert-x="false" data-rellax-speed="-3")
				img(src='images/show/techDron_medium2.png' data-depth="0.2" alt='techDron_medium')
			div(class='tech-dronico__btn' data-text='2')
				.tech-dronico__circle
					.tech-dronico__text-container
						span.plus +
						span.active-text Транспортировка
		.tech-dronico__img.big
			div(class="rellax" data-rellax-speed="3")
				img(src='images/show/techDron_big3.png' data-depth="0.2" alt='techDron_big')
			div(class='tech-dronico__btn' data-text='3')
				.tech-dronico__circle
					.tech-dronico__text-container
						span.plus +
						span.active-text Безопасность